<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Finalizar Eventos</h1>
      <p class="text-gray-600 mt-2">Gere certificados para eventos concluídos</p>
    </div>

    <!-- Loading -->
    <div *ngIf="loading" class="flex justify-center items-center py-20">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      <span class="ml-3 text-gray-600">Carregando eventos finalizados...</span>
    </div>

    <!-- Events List -->
    <div *ngIf="!loading" class="space-y-8">

      <!-- Pending Events Section -->
      <div *ngIf="eventsPending.length > 0">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h2 class="text-2xl font-bold text-gray-900">Eventos Pendentes de Finalização</h2>
            <p class="text-gray-600 text-sm mt-1">{{ eventsPending.length }} evento(s) aguardando geração de
              certificados</p>
          </div>
          <div class="px-4 py-2 bg-yellow-100 text-yellow-800 rounded-lg font-semibold">
            {{ eventsPending.length }} Pendente(s)
          </div>
        </div>

        <div class="grid grid-cols-1 gap-6">
          <div *ngFor="let event of eventsPending"
            class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">

            <div class="flex flex-col md:flex-row">
              <!-- Event Image -->
              <div class="md:w-1/4 h-48 md:h-auto bg-gradient-to-r from-blue-500 to-purple-600 relative">
                <div class="absolute inset-0 flex items-center justify-center">
                  <svg class="w-16 h-16 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z">
                    </path>
                  </svg>
                </div>
              </div>

              <!-- Event Info -->
              <div class="md:w-3/4 p-6">
                <div class="flex justify-between items-start mb-4">
                  <div class="flex-1">
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">{{ event.title }}</h2>
                    <p class="text-gray-600 mb-3">{{ event.description }}</p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
                      <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                          </path>
                        </svg>
                        <span>{{ event.starts_at | date:'dd/MM/yyyy HH:mm' }}</span>
                      </div>

                      <div class="flex items-center text-gray-600">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                          </path>
                        </svg>
                        <span>{{ event.location }}</span>
                      </div>
                    </div>
                  </div>

                  <!-- Certificate Status Badge -->
                  <div *ngIf="event.certificates_generated"
                    class="ml-4 px-4 py-2 bg-green-100 text-green-800 rounded-lg font-semibold whitespace-nowrap">
                    <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Certificados Gerados
                  </div>
                </div>

                <!-- Stats -->
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
                  <div class="bg-blue-50 rounded-lg p-3 text-center">
                    <div class="text-2xl font-bold text-blue-600">{{ event.total_participants || 0 }}</div>
                    <div class="text-xs text-gray-600">Total Inscritos</div>
                  </div>

                  <div class="bg-green-50 rounded-lg p-3 text-center">
                    <div class="text-2xl font-bold text-green-600">{{ event.participants_with_checkin || 0 }}</div>
                    <div class="text-xs text-gray-600">Com Check-in</div>
                  </div>

                  <div class="bg-purple-50 rounded-lg p-3 text-center">
                    <div class="text-2xl font-bold text-purple-600">
                      {{ event.participants_with_checkin && event.total_participants ?
                      ((event.participants_with_checkin / event.total_participants) * 100).toFixed(0) : 0 }}%
                    </div>
                    <div class="text-xs text-gray-600">Taxa Presença</div>
                  </div>

                  <div class="bg-orange-50 rounded-lg p-3 text-center">
                    <div class="text-2xl font-bold text-orange-600">
                      {{ (event.total_participants || 0) - (event.participants_with_checkin || 0) }}
                    </div>
                    <div class="text-xs text-gray-600">Ausentes</div>
                  </div>
                </div>

                <!-- Action Button -->
                <div>
                  <button *ngIf="!event.certificates_generated" (click)="generateCertificates(event)"
                    [disabled]="!event.participants_with_checkin || event.participants_with_checkin === 0"
                    class="w-full md:w-auto bg-blue-600 hover:bg-blue-700 disabled:bg-gray-400 disabled:cursor-not-allowed text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Gerar Certificados
                  </button>

                  <div *ngIf="event.certificates_generated" class="text-green-600 font-medium">
                    ✓ Certificados já foram gerados para este evento
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Finalized Events Section -->
          <div *ngIf="eventsWithCertificates.length > 0">
            <div class="flex items-center justify-between mb-4">
              <div>
                <h2 class="text-2xl font-bold text-gray-900">Eventos Finalizados</h2>
                <p class="text-gray-600 text-sm mt-1">{{ eventsWithCertificates.length }} evento(s) com certificados
                  gerados</p>
              </div>
              <div class="px-4 py-2 bg-green-100 text-green-800 rounded-lg font-semibold">
                {{ eventsWithCertificates.length }} Finalizado(s)
              </div>
            </div>

            <div class="grid grid-cols-1 gap-6">
              <div *ngFor="let event of eventsWithCertificates"
                class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 opacity-75">

                <div class="flex flex-col md:flex-row">
                  <!-- Event Image -->
                  <div class="md:w-1/4 h-48 md:h-auto bg-gradient-to-r from-green-500 to-emerald-600 relative">
                    <div class="absolute inset-0 flex items-center justify-center">
                      <svg class="w-16 h-16 text-white opacity-50" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                  </div>

                  <!-- Event Info -->
                  <div class="md:w-3/4 p-6">
                    <div class="flex justify-between items-start mb-4">
                      <div class="flex-1">
                        <h2 class="text-2xl font-bold text-gray-900 mb-2">{{ event.title }}</h2>
                        <p class="text-gray-600 mb-3">{{ event.description }}</p>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
                          <div class="flex items-center text-gray-600">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                              </path>
                            </svg>
                            <span>{{ event.starts_at | date:'dd/MM/yyyy HH:mm' }}</span>
                          </div>

                          <div class="flex items-center text-gray-600">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                              </path>
                            </svg>
                            <span>{{ event.location }}</span>
                          </div>
                        </div>
                      </div>

                      <!-- Certificate Status Badge -->
                      <div
                        class="ml-4 px-4 py-2 bg-green-100 text-green-800 rounded-lg font-semibold whitespace-nowrap">
                        <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7">
                          </path>
                        </svg>
                        Certificados Gerados
                      </div>
                    </div>

                    <!-- Stats -->
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                      <div class="bg-blue-50 rounded-lg p-3 text-center">
                        <div class="text-2xl font-bold text-blue-600">{{ event.total_participants || 0 }}</div>
                        <div class="text-xs text-gray-600">Total Inscritos</div>
                      </div>

                      <div class="bg-green-50 rounded-lg p-3 text-center">
                        <div class="text-2xl font-bold text-green-600">{{ event.participants_with_checkin || 0 }}</div>
                        <div class="text-xs text-gray-600">Com Check-in</div>
                      </div>

                      <div class="bg-purple-50 rounded-lg p-3 text-center">
                        <div class="text-2xl font-bold text-purple-600">
                          {{ event.participants_with_checkin && event.total_participants ?
                          ((event.participants_with_checkin / event.total_participants) * 100).toFixed(0) : 0 }}%
                        </div>
                        <div class="text-xs text-gray-600">Taxa Presença</div>
                      </div>

                      <div class="bg-orange-50 rounded-lg p-3 text-center">
                        <div class="text-2xl font-bold text-orange-600">
                          {{ (event.total_participants || 0) - (event.participants_with_checkin || 0) }}
                        </div>
                        <div class="text-xs text-gray-600">Ausentes</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Empty State - No Events At All -->
        <div *ngIf="!loading && allEvents.length === 0" class="text-center py-12">
          <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">Nenhum evento cadastrado</h3>
          <p class="mt-2 text-gray-500">Eventos aparecerão aqui para geração de certificados</p>
        </div>

        <!-- Empty State - No Pending Events (but has finalized) -->
        <div *ngIf="!loading && eventsPending.length === 0 && eventsWithCertificates.length > 0"
          class="text-center py-12 mb-8">
          <svg class="mx-auto h-16 w-16 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">Nenhum evento pendente</h3>
          <p class="mt-2 text-gray-500">Todos os eventos já tiveram seus certificados gerados</p>
        </div>

      </div>
    </div>